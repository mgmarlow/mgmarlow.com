{% extends "layouts/main.njk" %}

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

{% block header %}
{% include "header.njk" %}
{% endblock %}

{% block content %}
  <article>
    <div>
      <h1 class="posttitle">{{ title }}</h1>
      <p class="m-0">
        <span><time>{{ date | postDate }}</time><em>{{ '; Updated: ' + updated | postDate if updated }}</em></span>
        by {{ site.author.name }}
      </p>
    </div>
    {{ content | safe }}
  </article>
{% endblock %}

{% block footer %}
  <div>
    <br />

    <p>Thanks for reading! Send your comments to <a href="mailto:{{ site.author.email }}">{{ site.author.email }}</a>.</p>
  </div>
{% endblock %}
