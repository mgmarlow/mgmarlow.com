{% extends "layouts/main.njk" %}

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

{% block content %}
  {% if "emacs" in tags %}
    {% include "bookpromo.njk" %}
  {% endif %}

  <article>
    <div>
      <h1 class="posttitle">{{ title }}</h1>
      <p class="m-0">
        <small>
          <span><time>{{ date | postDate }}</time>{{ ' (updated: ' + updated | postDate + ')' if updated }}</span>
          by {{ site.author.name }}
        </small>
      </p>
    </div>
    {{ content | safe }}
  </article>
{% endblock %}

{% block footer %}
  <div>
    <br />

    <p>Thanks for reading! <a href="mailto:{{ site.author.email }}">Comment by email</a>.</p>
  </div>
{% endblock %}
