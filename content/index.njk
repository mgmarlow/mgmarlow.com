{%- for post in collections.post | reverse | head(4) -%}
  <article class="mobile-block spacing-4">
    <h2 class="m-0"><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
    <p class="m-0"><small><time>{{ post.data.date | postDate }}</time></small></p>
    <p>{{ post.content | safe }}
    <p><a href="{{ post.url | url }}">Read more</a></p>
  </article>
{%- endfor -%}

